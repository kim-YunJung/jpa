data class Coupon(
    @Id @GeneratedValue(strategy = GenerationType.IDENTITY)
    val id: Long = 0L,
    var name: String,
    var discountPercentage: Double,
    var expirationDate: LocalDateTime
)

@Entity
data class UserCoupon(
    @Id @GeneratedValue(strategy = GenerationType.IDENTITY)
    val id: Long = 0L,
    @ManyToOne
    val user: User,
    @ManyToOne
    val coupon: Coupon,
    var used: Boolean = false
)
